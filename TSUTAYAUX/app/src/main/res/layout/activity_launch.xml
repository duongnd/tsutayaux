<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <jp.co.tsutayaux.ui.guide.CustomViewPager
        android:id="@+id/launch_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </jp.co.tsutayaux.ui.guide.CustomViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/launch_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_launch_previous" />

        <Button
            android:id="@+id/launch_next"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/button_launch_next"
            android:text="@string/launch_next"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
</LinearLayout>
